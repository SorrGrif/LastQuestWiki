<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comsorrgriflastquestwiki.github.lastquestwiki.archerFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/archerLayout"
        android:padding="@dimen/classPadding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/archerLbl"
            android:id="@+id/archerLbl"
            android:layout_gravity="center_horizontal"
            android:fontFamily="monospace"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            android:textColor="@color/colorAccent" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/raceImgSize"
            android:id="@+id/archerImg"
            android:src="@drawable/archer"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/descriptionLbl"
            android:id="@+id/descriptionLbl"
            android:layout_gravity="center_horizontal"
            android:fontFamily="monospace"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            android:textColor="@color/colorAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/archerDescription"
            android:id="@+id/descriptionTxt"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="monospace"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            android:textColor="@color/colorAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/baseTraitsLbl"
            android:id="@+id/baseTraitLbl"
            android:layout_gravity="center_horizontal"
            android:fontFamily="monospace"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            android:textColor="@color/colorAccent" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/traitLayout">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/soloAbilityLbl"
                        android:id="@+id/soloAbTxt"
                        android:fontFamily="monospace"
                        android:textSize="16sp"
                        android:textStyle="normal|bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/defenseRatingLbl"
                        android:id="@+id/defenseRatTxt"
                        android:fontFamily="monospace"
                        android:textSize="16sp"
                        android:textStyle="normal|bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/damageRatingLbl"
                        android:id="@+id/damageRatTxt"
                        android:fontFamily="monospace"
                        android:textSize="16sp"
                        android:textStyle="normal|bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notableTraitLbl"
                        android:id="@+id/notableTrTxt"
                        android:fontFamily="monospace"
                        android:textSize="16sp"
                        android:textStyle="normal|bold" />
                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/averageLbl"
                        android:id="@+id/soloAbStat"
                        android:fontFamily="monospace"
                        android:textSize="16sp"
                        android:textStyle="normal|bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/averageLbl"
                        android:id="@+id/defenseRatStat"
                        android:fontFamily="monospace"
                        android:textSize="14sp"
                        android:textStyle="normal|bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/highLbl"
                        android:id="@+id/damageRatStat"
                        android:fontFamily="monospace"
                        android:textSize="16sp"
                        android:textStyle="normal|bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rangerTraitsLbl"
                        android:id="@+id/notableTrStat"
                        android:fontFamily="monospace"
                        android:textSize="16sp"
                        android:textStyle="normal|bold" />
                </TableRow>

            </TableLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/playableRaces"
            android:id="@+id/avRacesLbl"
            android:layout_gravity="center_horizontal"
            android:fontFamily="monospace"
            android:textSize="16sp"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/playableRacesLayout">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_weight="1"
                android:id="@+id/humanLayout" >

                <ImageView
                    android:layout_width="@dimen/raceImgSize"
                    android:layout_height="@dimen/raceImgSize"
                    android:id="@+id/humanImg"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:src="@drawable/human"
                    android:layout_marginLeft="0dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/image_border" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/humanLbl"
                    android:id="@+id/humanLbl"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="monospace"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_weight="1"
                android:id="@+id/elfLayout" >

                <ImageView
                    android:layout_width="@dimen/raceImgSize"
                    android:layout_height="@dimen/raceImgSize"
                    android:id="@+id/elfImg"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:src="@drawable/elf"
                    android:layout_marginLeft="0dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/image_border" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/elfLbl"
                    android:id="@+id/elfLbl"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="monospace"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>

