<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comsorrgriflastquestwiki.github.lastquestwiki.racesFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0">

        <ImageView
            android:layout_width="188dp"
            android:layout_height="200dp"
            android:id="@+id/humanImg"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/human"
            android:longClickable="false"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Human"
            android:id="@+id/humanTxt"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="0dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0">

        <ImageView
            android:layout_width="188dp"
            android:layout_height="200dp"
            android:id="@+id/elfImg"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/elf"
            android:layout_gravity="center_horizontal|right"
            android:layout_marginRight="11dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elf"
            android:id="@+id/elfTxt"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="0dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1">

        <ImageView
            android:layout_width="188dp"
            android:layout_height="188dp"
            android:id="@+id/dwarfImg"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/dwarf"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dwarf"
            android:id="@+id/dwarfTxt"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="0dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1">

        <ImageView
            android:layout_width="188dp"
            android:layout_height="188dp"
            android:id="@+id/hobbitImg"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/hobbit"
            android:layout_gravity="center_horizontal|right"
            android:layout_marginRight="11dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hobbit"
            android:id="@+id/hobbitTxt"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="0dp" />
    </LinearLayout>

</GridLayout>
