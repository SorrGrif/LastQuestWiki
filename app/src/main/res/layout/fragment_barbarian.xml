<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comsorrgriflastquestwiki.github.lastquestwiki.barbarianFragment"
    android:orientation="vertical"
    android:paddingTop="-50dp"
    android:paddingBottom="-10dp">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/barbarianLayout"
        android:padding="@dimen/classPadding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/barbarianLbl"
            android:id="@+id/barbarianLbl"
            android:layout_gravity="center_horizontal"
            android:fontFamily="monospace"
            android:textSize="15sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_dark" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/raceImgSize"
            android:id="@+id/barbarianImg"
            android:src="@drawable/barbarian"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/descriptionLbl"
            android:id="@+id/descriptionLbl"
            android:layout_gravity="center_horizontal"
            android:fontFamily="monospace"
            android:textSize="15sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/barbarianDescription"
            android:id="@+id/descriptionTxt"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="monospace"
            android:textSize="15sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/baseTraitsLbl"
            android:id="@+id/baseTraitLbl"
            android:layout_gravity="center_horizontal"
            android:fontFamily="monospace"
            android:textSize="15sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_dark" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/traitLayout">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/soloAbilityLbl"
                        android:id="@+id/soloAbTxt"
                        android:fontFamily="monospace"
                        android:textStyle="normal|bold"
                        android:elevation="0dp"
                        android:textColor="@android:color/background_dark" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/defenseRatingLbl"
                        android:id="@+id/defenseRatTxt"
                        android:fontFamily="monospace"
                        android:textStyle="normal|bold"
                        android:elevation="0dp"
                        android:textColor="@android:color/background_dark" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/damageRatingLbl"
                        android:id="@+id/damageRatTxt"
                        android:fontFamily="monospace"
                        android:textStyle="normal|bold"
                        android:elevation="0dp"
                        android:textColor="@android:color/background_dark" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notableTraitLbl"
                        android:id="@+id/notableTrTxt"
                        android:fontFamily="monospace"
                        android:textStyle="normal|bold"
                        android:elevation="0dp"
                        android:textColor="@android:color/background_dark" />
                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/veryHighLbl"
                        android:id="@+id/soloAbStat"
                        android:fontFamily="monospace"
                        android:textStyle="normal|bold"
                        android:elevation="0dp"
                        android:textColor="@android:color/background_dark" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/highLbl"
                        android:id="@+id/defenseRatStat"
                        android:fontFamily="monospace"
                        android:textStyle="normal|bold"
                        android:elevation="0dp"
                        android:textColor="@android:color/background_dark" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/veryHighLbl"
                        android:id="@+id/damageRatStat"
                        android:fontFamily="monospace"
                        android:textStyle="normal|bold"
                        android:elevation="0dp"
                        android:textColor="@android:color/background_dark" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/barbarianNotableTraitsLbl"
                        android:id="@+id/notableTrStat"
                        android:fontFamily="monospace"
                        android:textStyle="normal|bold"
                        android:elevation="0dp"
                        android:textColor="@android:color/background_dark" />
                </TableRow>

            </TableLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/playableRaces"
            android:id="@+id/avRacesLbl"
            android:layout_gravity="center_horizontal"
            android:fontFamily="monospace"
            android:textSize="15sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_dark" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/playableRacesLayout">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_weight="1"
                android:id="@+id/linearLayout" >

                <ImageView
                    android:layout_width="@dimen/raceImgSize"
                    android:layout_height="@dimen/raceImgSize"
                    android:id="@+id/dwarfImg"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:src="@drawable/dwarf"
                    android:layout_marginLeft="0dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/image_border" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dwarfLbl"
                    android:id="@+id/dwarfLbl"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="monospace"
                    android:textSize="15sp"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_dark" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_weight="1"
                android:id="@+id/dwarfLayout">

                <ImageView
                    android:layout_width="@dimen/raceImgSize"
                    android:layout_height="@dimen/raceImgSize"
                    android:id="@+id/humanImg"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:src="@drawable/human"
                    android:layout_marginLeft="0dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/image_border" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/humanLbl"
                    android:id="@+id/humanLbl"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="monospace"
                    android:textSize="15sp"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_dark" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</ScrollView>
